{% extends 'baseFront.html.twig' %}

    {% block content %}
        <section class="bg-page-header">
            <div class="page-header-overlay">
                <div class="container">
                    <div class="row">
                        <div class="page-header">
                            <div class="page-title">
                                <h2>{{ user.email }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
        <section class="bg-blog-style-2">
            <div class="container">
                <div class="row">
                    <div class="blog-style-2">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="comments-form">
                                    {% if user.username == app.user.username %}
                                        <h4 class="comments-title"> Profile de  {{ user.username }} <a href="">/ Modifier Profil</a></h4>

                                    {% else %}
                                        <h4 class="comments-title"> Profile de  {{ user.username }}  <a href="{{ path('amis', { 'idfriend': user.id }) }}">/ Ajouter ami</a></h4>

                                    {% endif %}
                                </div>
                                <br>
                                {% for publication in publications %}
                                <div class="blog-items">
                                    <div class="blog-img">
                                        {{ publication.image }}
                                    </div>

                                    <div class="blog-content-box">
                                        <div class="blog-content">
                                            <h4><a href="{{ path('profile', { 'username': publication.user }) }}">{{ publication.user }}</a></h4>
                                            <ul class="meta-post">
                                                <li><i class="fa fa-calendar" aria-hidden="true"></i> {{ publication.Datepublication|date('d-m-Y H:i:s') }}</li>

                                                <li><a href="#"><i class="fa fa-commenting-o" aria-hidden="true"></i> supprimer la publication</a></li>
                                            </ul>
                                            <p>{{ publication.text}}</p>
                                            <a href="{{ path('publication', { 'pub': publication.id }) }}">read more <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>

                            <div class="col-md-4">
                                <div class="sidebar">
                                    <br>
                                    <div class="widget">

                                        <h4 class="sidebar-widget-title"> à propos de moi </h4>
                                        <div class="widget-content">
                                            <ul class="catagories">
                                                <li><i class="fa fa-angle-double-right" aria-hidden="true"></i> {{ user.about }}</li>
                                                <li><i class="fa fa-angle-double-right" aria-hidden="true"></i> {{ nb }} publications </li>
                                                <li><i class="fa fa-angle-double-right" aria-hidden="true"></i> Dernière connexion : {{ user.lastLogin|date('Y-m-d H:i:s') }}</li>
                                            </ul>
                                        </div>
                                        <!-- .widget-content -->
                                    </div>
                                    <!-- .widget -->

                                    <!-- .widget -->
                                    <div class="widget">
                                        <h4 class="sidebar-widget-title">photo gallery</h4>
                                        <div class="widget-content">
                                            <div class="gallery-instagram">
                                                <a href="#"><img src="assets/images/event/photo-gallery-small-img-1.jpg" alt="photo-gallery-small-img-1"></a>
                                                <a href="#"><img src="assets/images/event/photo-gallery-small-img-2.jpg" alt="footer-instagram-img-2"></a>
                                                <a href="#"><img src="assets/images/event/photo-gallery-small-img-3.jpg" alt="footer-instagram-img-3"></a>
                                                <a href="#"><img src="assets/images/event/photo-gallery-small-img-4.jpg" alt="footer-instagram-img-4"></a>
                                                <a href="#"><img src="assets/images/event/photo-gallery-small-img-5.jpg" alt="footer-instagram-img-5"></a>
                                                <a href="#"><img src="assets/images/event/photo-gallery-small-img-6.jpg" alt="footer-instagram-img-6"></a>

                                            </div>
                                            <!-- .gallery-instagram -->
                                        </div>
                                        <!-- .widget-content -->
                                    </div>
                                    <div class="widget">
                                        <h4 class="sidebar-widget-title">Mes Amis({{ friendsnumber }})</h4>
                                        <div class="widget-content">

                                                <ul class="catagories">
                                                {% for ami in amis %}

                                               <li> <a href="{{ path('profile', { 'username': friends[ami.seconduser]  }) }}">{{ friends[ami.seconduser] }}</a> </li>

                                                {% endfor%}
                                                </ul>
                                        </div>
                            </div>
                            <!-- .col-md-4 -->
                        </div>
                        <!-- .row -->
                    </div>
                    <!-- .blog-style-2 -->
                </div>
                <!-- .row -->
            </div>
            <!-- .container -->
        </section>
{% endblock content %}