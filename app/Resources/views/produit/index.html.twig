{% extends 'baseAdmin.html.twig' %}

{% block content %}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title"> Listes des produits </strong>
                    </div>

                    <div class="card-body">
    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
        <a href="{{ path('produit_new') }}">Ajouter un nouveau produit</a>
        <thead>
            <tr>
                <th>Id</th>
                <th>Image produit</th>
                <th>Nom produit</th>
                <th>Prix produit</th>
                <th>Description produit</th>
                <th>Quantite produit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}" style="width:50px;height: 50px;">{{ produit.id }}</a></td>
                <td> <img src="{{ asset('image_shop/') }}{{ produit.imageProd }} "></td>
                <td>{{ produit.nomProd }}</td>
                <td>{{ produit.prixProd }}</td>
                <td>{{ produit.descriptionProd }}</td>
                <td>{{ produit.quantiteProd }}</td>
                <td>
                    <a href="{{ path('produit_show', { 'id': produit.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                    <a href="{{ path('produit_edit', { 'id': produit.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>

                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
    <ul>
        <li>

        </li>
    </ul>



{% endblock %}
