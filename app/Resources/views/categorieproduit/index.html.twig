{% extends 'baseAdmin.html.twig' %}

{% block content %}
<div class="content mt-3">
<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title"> Listes des catégories produit </strong>
                </div>

                <div class="card-body">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <a href="{{ path('categorieproduit_new') }}">Ajouter une nouvelle catégorie</a>
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom catégorie</th>
                            <th>Description catégorie</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for categorieProduit in categorieProduits %}
                            <tr>
                                <td><a href="{{ path('categorieproduit_show', { 'id': categorieProduit.id }) }}">{{ categorieProduit.id }}</a></td>

                                <td>{{ categorieProduit.nomCat }}</td>
                                <td>{{ categorieProduit.descriptionCat }}</td>


                                <td>
                                    <a href="{{ path('categorieproduit_show', { 'id':categorieProduit.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                    <a href="{{ path('categorieproduit_edit', { 'id': categorieProduit.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>

                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>


    </div>
</div><!-- .animated -->
    </div><!-- .content -->
    <ul>
        <li>

        </li>
    </ul>



{% endblock %}




