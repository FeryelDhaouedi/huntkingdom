{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title" style="font-size: 20px;"> Blog {{ blog.id }} </strong>
                        </div>
                        <div class="card-body">
                            <div class="vue-lists">
                                <div class="row">
                                    <div class="col-md-6">
                                        <ul style="font-size: 16px;">
                                            <li>
                                                <strong> Nom du produit : </strong> {{ blog.titre }}
                                            </li>
                                            <li>  <strong> Description: </strong> {{ blog.description }}</li>
                                            <li>  <strong> Type : </strong> {{ blog.type }}</li>
                                            <li>  <strong> Date : </strong>{% if blog.date %}{{ blog.date|date('Y-m-d H:i:s') }}{% endif %}</li>
                                            <li>  <strong> Attachmet : </strong> {{ blog.attachment }}</li>
                                            <a class="btn btn-info"  role="button" href="{{ path('blog_index') }}">Blog List</a>
                                        </ul>
                                    </div>

                                </div>
                            </div>


                        </div></div></div></div></div></div>
    <div>

    </div>
{% endblock %}
