    <link rel="stylesheet" href="{{ asset('back/assets/css/style.css') }}">
{% endblock %}
{% block content %}

    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Medias</th>
                <th>Zone</th>
                <th>Saison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td><a href="{{ path('animal_show', { 'id': animal.id }) }}">{{ animal.id }}</a></td>
                <td>{{ animal.nom }}</td>
                <td>{{ animal.description }}</td>
                <td>{{ animal.medias }}</td>
                <td>{{ animal.zone }}</td>
                <td>{{ animal.saison }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('animal_show', { 'id': animal.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('animal_edit', { 'id': animal.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
