{% extends 'baseAdmin.html.twig' %}
{% block title %}Liste des animaux{% endblock %}
{% block titre %} Liste des animaux{% endblock %}
{% block content %}
    <a href="{{ path('animal_new') }}" class="btn btn-outline-secondary">Ajouter un nouveau animal</a>
    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Medias</th>
                <th>Zone</th>
                <th>Saison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td><a href="{{ path('animal_show', { 'id': animal.id }) }}"style="width:25px;height: 25px;">{{ animal.id }}</a></td>
                <td>{{ animal.nom }}</td>
                <td>{{ animal.description }}</td>
                <td><img src="{{ asset('images/') }}{{ animal.medias }} "style="width:150px;height: 150px;"></td>
                <td>{{ animal.zone }}</td>
                <td>{{ animal.saison }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('animal_show', { 'id': animal.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>show</a>
                        </li>
                        <li>
                            <a href="{{ path('animal_edit', { 'id': animal.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

