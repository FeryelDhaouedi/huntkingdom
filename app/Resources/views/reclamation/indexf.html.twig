{% extends 'back.html.twig' %}

{% block content %}
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title"> Listes de vos r√©clamations </strong>
                    </div>

                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">

                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Datecreation</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Reponse</th>
                                <th>Status</th>
                                <th>Fichier</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reclamation in reclamations %}
                                <tr>
                                    <td><a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}"style="width:50px;height: 50px;">{{ reclamation.id }}</a></td>
                                    <td>{% if reclamation.dateCreation %}{{ reclamation.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ reclamation.type }}</td>
                                    <td>{{ reclamation.description }}</td>
                                    <td>{{ reclamation.reponse }}</td>
                                    <td>{% if reclamation.status %}Yes{% else %}No{% endif %}</td>
                                    <td> <img src="{{ asset('images/') }}{{ reclamation.fichier }} "></td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}"class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i>edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </>

                        <ul>
                            <li>
                                <a href="{{ path('reclamation_new') }}">Create a new reclamation</a>
                            </li>
                        </ul>
                        {% endblock %}
