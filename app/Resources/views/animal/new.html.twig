{% extends 'baseAdmin.html.twig' %}
{% block title %}Ajouter animal{% endblock %}
{% block titre %} Ajouter animal {% endblock %}

{% block content %}

    <div class="card-body card-block">
        {{ form_start(form) }}


        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Nom  </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.nom) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
            </div>
        </div>

        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Description  </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.description) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
            </div>
        </div>

        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Medias  </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.file) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
            </div>
        </div>

        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Zone  </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.zone) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
            </div>
        </div>

        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Saison </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.saison) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm" >
                <i class="fa fa-dot-circle-o"></i> Ajouter Animal
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
