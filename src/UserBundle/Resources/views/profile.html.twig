{% extends 'baseFront.html.twig' %}

    {% block content %}
        <section class="bg-page-header">
            <div class="page-header-overlay">
                <div class="container">
                    <div class="row">
                        <div class="page-header">
                            <div class="page-title">
                                <h2>{{ app.user.email }}</h2>
                            </div>
